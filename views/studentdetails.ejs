<%- include('./base/header.ejs') %>

<div class="container"></div>
    <div class="alert bg-info my-3">
        <h4 class="text-center" style="color:antiquewhite">Student List</h4>      
    </div>
</div>

<div class="container"></div>
    <div class="row">
        <table class="table text-center">
            <thead>
                <tr>
                    <th>Roll NO</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Father Name</th>
                    <th>Aadhar No</th>
                    <th>Mobile No</th>
                    <th colspan="2">Action</th>
                </tr>
            </thead>
            <% students.forEach((std)=>{ %>
                <tr>
                    <td><%= std.rollNo %></td>
                    <td><%= std.firstName %></td>
                    <td><%= std.lastName %></td>
                    <td><%= std.fatherName %></td>
                    <td><%= std.aadharCardNo %></td>
                    <td><%= std.mobileNo %></td>
                    <td><a href="/student/edit/page/<%= std._id %>" class="btn btn-warning w-75">Edit</a></td>
                    <td><a href="/delete/student/<%= std._id %>" class="btn btn-danger w-75">Delete</a></td>
                </tr>
           <% }) %>
        </table>
    </div>
</div>


<%- include('./base/footer.ejs') %>